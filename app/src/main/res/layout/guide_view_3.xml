<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#000000">


    <TextView
        android:id="@+id/guideText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="@string/guide_text3"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>

    <com.kingja.supershapeview.SuperShapeTextView
        android:id="@+id/guide_commit"
        android:layout_width="100sp"
        android:layout_height="55sp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/guideText3"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        app:super_cornerRadius="100dp"
        app:super_solidColor="@color/colorAccent" />

</RelativeLayout>